console.log("---------------Ejercicio #7-------------")
// ----------------------------------------------------
let num1 = prompt("Escribe un numero: ")
let num2 = prompt("Escribe un segundo numero: ")
let res = num1/num2
if(num1 == 0  || num2 == 0 )
    console.log("Error no puede dividirse por 0. ")
else
    console.log("El cociente de estos dos es: "+res)
// ----------------------------------------------------
console.log("---------------Ejercicio #8-------------")
// ----------------------------------------------------
let numeroFor = prompt("Escribe un numero: ")
let suma = ""
let i
for(i = 0; i<numeroFor; i++){
    if(i == numeroFor - 1)
        suma += i
    else
        suma += i + ", "
}
console.log(suma)
// ----------------------------------------------------
console.log("---------------Ejercicio #9-------------")
// ----------------------------------------------------
let numeroWhile = 0
let sumaWhile = 0
while (numeroWhile%2 == 0){
    numeroWhile = parseInt(prompt("Escribe un numero: "))
    sumaWhile++
}
console.log("Ha ingresado "+sumaWhile+" pares")
