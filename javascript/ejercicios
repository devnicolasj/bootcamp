// ----------------------------------------------------
console.log("---------------Ejercicio #4-------------")
// ----------------------------------------------------
let cantNumeros = prompt("Escribe la cantidad de numeros: ")
let totalNumeros = 0
for (let i=0;i<cantNumeros;i++){
    let numeros = parseFloat(prompt("Escribe un numero: "))
    totalNumeros += numeros
}
let media = totalNumeros/cantNumeros
console.log(media)
