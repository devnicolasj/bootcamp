// ----------------------------------------------------
let lado = 40
let cantlado = 4
let area = lado*lado
let perimetro = lado*cantlado
console.log("Lado: "+lado)
console.log("Cantidad de lados: "+cantlado)
console.log("Area del cuadrado: "+area)
console.log("Perimetro del cuadrado: "+perimetro)
