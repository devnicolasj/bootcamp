console.log("---------------Ejercicio #1-------------")
// ----------------------------------------------------
var precio = 100
var iva = 0.21
var resultado = precio+(precio*iva)
console.log("El precio del producto es: "+precio)
console.log("El iva para el producto es: "+iva)
console.log("El total son: $"+resultado)
